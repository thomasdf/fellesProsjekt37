         <children>
            <HBox prefHeight="100.0" prefWidth="778.0">
               <children>
                  <TextFlow prefHeight="100.0" prefWidth="783.0" textAlignment="CENTER">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Invite to activity" textAlignment="CENTER">
                           <font>
                              <Font name="Franklin Gothic Book" size="34.0" />
                           </font>
                        </Text>
                     </children>
                     <padding>
                        <Insets top="30.0" />
                     </padding>
                  </TextFlow>
               </children>
            </HBox>
