            <Button fx:id="invite_btn" onAction="#inviteCheckedPeople" layoutX="319.0" layoutY="667.0" mnemonicParsing="false" prefHeight="32.0" prefWidth="150.0" text="Invite">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
         </children>
      </Pane>
   </children>
